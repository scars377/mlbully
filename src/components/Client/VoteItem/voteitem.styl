.item
  position relative
  background-color: #046380
  font-size: 32px
  color: #fff
  text-align: center
  size = 70px
  width:  size
  height: size
  line-height: size
  border-radius: size*.5
  border 2px solid #fff
  margin: 3px
  opacity: .4

  absolute()
    position absolute
    left 0
    top 0
    width  100%
    height 100%

  span
    absolute()
    transition transform .3s

  &--selected
    background-color: #046380
    opacity: 1
    &:before
      absolute()
      content: ''
      border-radius: 50%
      background-color: #046380
      @keyframes blink
        from
          transform none
          opacity 1
        to
          transform scale(1.5)
          opacity 0
      animation: blink .8s
    span
      transform scale(1.3)
