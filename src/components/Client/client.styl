:global
  html
  body
  #wrapper
    width  100%
    height 100%
    overflow: hidden


.client
  width  100%
  height 100%
  background url('assets/img/bg.jpg') center top no-repeat #002c9f
  background-size cover
  text-align center
  position relative
  &:before
    content ''
    width  0
    height 100%
    display inline-block
    vertical-align middle


spacing(n)
  >div
    margin-bottom unit(n,px)

.container
  position relative
  display inline-block
  vertical-align middle
  spacing 40
  @media (max-height 550px)
    spacing 20
  @media (max-height 470px)
    spacing 10
  @media (max-height 430px)
    spacing 4
  @media (max-height 410px)
    position absolute
    width  100%
    height 100%
    left 0
    top 0
    overflow-x hidden
    overflow-y scroll

wh(w,h)
  width  unit(w*.5,px)
  height unit(h*.5,px)
  background-size cover

.head
  wh 295 139
  background-image url("assets/img/head.png")
  margin 10px auto

.teamname
  position relative
  font-family 'Arial', 'Microsoft JhengHei'
  font-weight bolder
  font-size 24px
  color #d0f4ff

  &:before, &:after
    position relative
    display inline-block
    margin 0 8px
    content ''
    wh 23 23
    background-image url("assets/img/star.png")


.teamimage
  wh 576 324
  margin 0 auto
  border 2px solid white
  background-color #000
  overflow hidden
  img
    width 100%
