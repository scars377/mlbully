.comment
  position: absolute
  bottom: 0
  width  100%
  height: 40px
  padding-top: 4px
  text-align: center

.input
  width 180px
  height 30px
  line-height: @height
  border-radius: 5px
  border: 1px solid #fff
  font-size: 14px
  margin: 0 4px
  padding-left: 8px
  color: #999
  &--active
    color: #33f

.btn
  display: inline-block
  width:  50px
  height: 30px
  line-height: @height
  color: #fff
  font-size: 14px
  margin: 0 4px
  text-align: center

  opacity: .5
  pointer-events: none
  &--active
    opacity: 1
    pointer-events: auto

.cancel
  background-color: #A7A37E
  &:before
    content '取消'

.confirm
  background-color: #046380
  &:before
    content '確定'
