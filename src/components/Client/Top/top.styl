.top
  position: absolute
  width  100%
  height 100%
  text-align: center

.inner
  position absolute
  left 50%
  top  50%
  width  200px
  height 40px
  margin-left -(@width/2)
  margin-top  -(@height/2)
  line-height: @height
  color: #fff
  font-size: 16px
  pointer-events: none


.loading
  &:before
    content: url('assets/img/loading.gif')

.login
  &:before
    content: 'Connect Facebook'
  pointer-events: auto
  background-color: #046380
  box-shadow: 2px 2px 0 #A7A37E
