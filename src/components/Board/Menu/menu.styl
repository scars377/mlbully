.menu
  position absolute
  z-index 100
  width  100%
  height 100%
  background-color #cc9
  transition transform .3s
  transform translateX(-100%)
  display flex
  flex-flow row wrap
  align-items center
  align-content center
  &--open
    transform none


.team
  display inline-block
  width 300px
  height 150px
  border 2px solid white
  margin 12px
  cursor pointer
  &:hover
    background-color rgba(#000,.3)

  color rgba(#fff,.4)
  font-size 120px
  line-height @height
