.clicks
  position absolute
  pointer-events none
  z-index 150
  width  100%
  height 100%


@keyframes click
  0%
    transform scale(2)
    opacity 0
  20%
  70%
    transform none
    opacity 1
  100%
    opacity 0

.click
  position absolute
  background url('assets/img/like.png') center center no-repeat
  background-size contain
  width  60px
  height 60px
  margin-left -@width * .5
  margin-top -@height * .5
  animation click 2s
